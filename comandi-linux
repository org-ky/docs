# Impostare layout tastiera
http://mibware.blogspot.com/2014/05/howto-risoluzione-problema-layout.html

#Cancellare una directory con tutto il suo contenuto
rm -rf <directory>

#Installare un pacchetto .deb
sudo apt install ./name.deb

#Cattura oggetti schermo
shift + stamp

#Posizione corrente
pwd

#Edit $PATH
export PATH=<stringa>
export PATH=$PATH:<stringa>	#concatena <stringa> ai valori gi√† esistenti

#Move directory into another
move /source /destination

#Link simbolico
ln -s /opt/eclipse/eclipse eclipse

#Switch user
sudo su <nome utente>
sudo su -
sudo su xelex

#Port listening
sudo ss -tulw
sudo ss -tulwn
sudo ss -tulwn | grep LISTEN
